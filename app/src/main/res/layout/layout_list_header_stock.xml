<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_scan"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@mipmap/ic_scan_gray" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@mipmap/ic_query_gray"
        android:textSize="12dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textCursorDrawable="@drawable/bg_simple_edit_text_cursor_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_scan"
        app:layout_constraintRight_toLeftOf="@id/iv_stock_query" />

    <ImageView
        android:id="@+id/iv_stock_query"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@mipmap/ic_stock_query"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>