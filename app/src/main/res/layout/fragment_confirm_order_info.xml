<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:background="@drawable/bg_dialog_select_server_shape">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@mipmap/ic_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:text="金额汇总"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_close"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_save_order"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:text="保存订单"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/recycler_view"
        android:background="@drawable/bg_textview_confirm_order_shape"
        app:layout_constraintRight_toLeftOf="@id/guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_confirm_order"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:text="确认订单"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toBottomOf="@id/recycler_view"
        android:background="@drawable/bg_textview_confirm_order_shape"
        app:layout_constraintLeft_toRightOf="@id/guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>