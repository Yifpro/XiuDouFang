<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:id="@+id/siv_customer_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_hint="请输入编号"
        app:siv_key="编号"
        app:siv_type="TYPE_EDIT"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:id="@+id/siv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_hint="请输入名称"
        app:siv_key="名称"
        app:siv_type="TYPE_EDIT"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:id="@+id/siv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_key="类别"
        app:siv_type="TYPE_TEXT"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_hint="请输入供应商"
        app:siv_key="供应商"
        app:siv_type="TYPE_EDIT"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_hint="请输入型号"
        app:siv_key="型号"
        app:siv_type="TYPE_EDIT"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_hint="请输入条形码"
        app:siv_key="条形码"
        app:siv_type="TYPE_EDIT"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_hint="请输入品牌"
        app:siv_key="品牌"
        app:siv_type="TYPE_EDIT"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_hint="请输入描述"
        app:siv_key="描述"
        app:siv_type="TYPE_EDIT"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_key="所属单位"
        app:siv_type="TYPE_TEXT"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_key="数量"
        app:siv_type="TYPE_TEXT"/>

    <include layout="@layout/layout_search_or_clear"/>
</LinearLayout>

