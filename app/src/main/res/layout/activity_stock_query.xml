<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar" />

        <com.example.administrator.xiudoufang.common.widget.SearchInfoView
            android:id="@+id/siv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:siv_isEditable="true"
            app:siv_hint="请输入编号"
            app:siv_key="编号" />

        <com.example.administrator.xiudoufang.common.widget.SearchInfoView
            android:id="@+id/siv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:siv_isEditable="true"
            app:siv_hint="请输入名称"
            app:siv_key="名称" />

        <com.example.administrator.xiudoufang.common.widget.SearchInfoView
            android:id="@+id/siv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:siv_isEditable="false"
            app:siv_key="类别" />

        <com.example.administrator.xiudoufang.common.widget.SearchInfoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:siv_isEditable="true"
            app:siv_hint="请输入供应商"
            app:siv_key="供应商" />

        <com.example.administrator.xiudoufang.common.widget.SearchInfoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:siv_isEditable="true"
            app:siv_hint="请输入型号"
            app:siv_key="型号" />

        <com.example.administrator.xiudoufang.common.widget.SearchInfoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:siv_isEditable="true"
            app:siv_hint="请输入条形码"
            app:siv_key="条形码" />

        <com.example.administrator.xiudoufang.common.widget.SearchInfoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:siv_isEditable="true"
            app:siv_hint="请输入品牌"
            app:siv_key="品牌" />

        <com.example.administrator.xiudoufang.common.widget.SearchInfoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:siv_isEditable="true"
            app:siv_hint="请输入描述"
            app:siv_key="描述" />

        <com.example.administrator.xiudoufang.common.widget.SearchInfoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:siv_isEditable="false"
            app:siv_key="所属单位" />

        <com.example.administrator.xiudoufang.common.widget.SearchInfoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:siv_isEditable="false"
            app:siv_key="数量" />

    </LinearLayout>

    <include layout="@layout/layout_search_or_clear" />
</RelativeLayout>