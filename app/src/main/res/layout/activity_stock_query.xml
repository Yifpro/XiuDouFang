<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_cccccc"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:id="@+id/siv_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_hint="@string/input_no"
        app:siv_key="@string/no"
        app:siv_type="TYPE_EDIT"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:id="@+id/siv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_hint="@string/input_name"
        app:siv_key="@string/name"
        app:siv_type="TYPE_EDIT"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:id="@+id/siv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_key="@string/type"
        app:siv_type="TYPE_TEXT"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:id="@+id/siv_supplier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_hint="@string/input_supplier"
        app:siv_key="@string/supplier"
        app:siv_type="TYPE_EDIT"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:id="@+id/siv_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_hint="@string/input_size"
        app:siv_key="@string/size"
        app:siv_type="TYPE_EDIT"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:id="@+id/siv_bar_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_hint="@string/input_bar_code"
        app:siv_key="@string/bar_code"
        app:siv_type="TYPE_EDIT"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:id="@+id/siv_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_hint="@string/input_brand"
        app:siv_key="@string/brand"
        app:siv_type="TYPE_EDIT"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:id="@+id/siv_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_hint="@string/input_details"
        app:siv_key="@string/details"
        app:siv_type="TYPE_EDIT"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:id="@+id/siv_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_key="@string/belong_unit"
        app:siv_type="TYPE_TEXT"/>

    <com.example.administrator.xiudoufang.common.widget.SearchInfoView
        android:id="@+id/siv_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_key="@string/amount"
        app:siv_type="TYPE_TEXT"/>

    <include layout="@layout/layout_search_or_clear"/>
</LinearLayout>

