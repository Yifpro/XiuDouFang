<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/rect_8_white">

    <TextView
        android:id="@+id/textview_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:text="@string/tip_1"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/textview_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goods_no_1"
        android:textSize="14dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/textview_1"/>

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="无"
        app:layout_constraintBottom_toBottomOf="@id/textview_1"
        app:layout_constraintLeft_toRightOf="@id/textview_1"/>

    <TextView
        android:id="@+id/tv_goods_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="无"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@id/textview_2"
        app:layout_constraintLeft_toRightOf="@id/textview_2"/>
</android.support.constraint.ConstraintLayout>