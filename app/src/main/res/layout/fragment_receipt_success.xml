<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rect_8_white">

    <TextView
        android:id="@+id/textview_1"
        android:text="收款成功"
        android:textSize="14dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="10dp"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_receipt_amount"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:text="实收金额为："
        app:layout_constraintTop_toBottomOf="@id/textview_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_discount_amount"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:text="优惠金额为："
        app:layout_constraintTop_toBottomOf="@id/tv_receipt_amount"
        app:layout_constraintLeft_toLeftOf="@id/tv_receipt_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/gray_f2f2f2"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_discount_amount"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="14dp"
        android:text="@string/confirm"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>